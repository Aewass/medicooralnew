---
import { translations } from '../i18n/translations';
// Remove prerendering as it's causing issues with Netlify form processing
// export const prerender = true;
const currentLang = Astro.url.pathname.split('/')[1] || 'bs';
const t = translations[currentLang].contact;
---

<section class="w-full py-20" id="contact">
  <div class="w-full max-w-7xl mx-auto px-5">
    <div class="text-center mb-16 space-y-4">
      <span class="text-secondary text-sm font-medium tracking-wider uppercase">
        {t.subtitle}
      </span>
      <h2 class="text-4xl md:text-5xl font-primary font-bold text-primary">
        {t.title}
      </h2>
      <div class="w-20 h-1.5 bg-secondary rounded-full mx-auto"></div>
    </div>

    <div style="max-width: 600px; margin: 0 auto; background: white; padding: 20px;">
      <!-- Raw HTML form exactly like the test form -->
      <form name="contact-form" method="POST" data-netlify="true" action="/success/">
        <input type="hidden" name="form-name" value="contact-form" />
        <p>
          <label>
            {t.form.name || "Vaše ime"}: 
            <input type="text" name="name" required />
          </label>
        </p>
        <p>
          <label>
            {t.form.email || "Vaš email"}: 
            <input type="email" name="email" required />
          </label>
        </p>
        <p>
          <label>
            {t.form.message || "Vaša poruka"}: 
            <textarea name="message" required></textarea>
          </label>
        </p>
        <p>
          <button type="submit">{t.form.submit || "Pošalji poruku"}</button>
        </p>
      </form>
    </div>
  </div>
</section>

<script>
  // Let Netlify handle the form submission natively
  // No JavaScript form handling to interfere with Netlify's processing
</script>