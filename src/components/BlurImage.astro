---
import { Image } from 'astro:assets';

const { src, alt, ...props } = Astro.props;
---

<div class="relative overflow-hidden">
  <div class="absolute inset-0 blur-2xl scale-110 -z-10">
    <Image
      src={src}
      alt={alt}
      width={100}
      height={100}
      class="w-full h-full object-cover"
    />
  </div>
  <Image
    src={src}
    alt={alt}
    {...props}
    class={`w-full h-full object-cover transition-opacity duration-500 ${props.class || ''}`}
  />
</div> 