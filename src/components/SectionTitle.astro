---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="text-center space-y-4 mb-16">
  <div class="flex items-center justify-center gap-4">
    <div class="w-8 h-0.5 bg-[#1199ee]/30"></div>
    {subtitle && <span class="text-[#1199ee] uppercase tracking-wider text-sm font-medium">{subtitle}</span>}
    <div class="w-8 h-0.5 bg-[#1199ee]/30"></div>
  </div>
  <h2 class="text-4xl md:text-5xl font-primary font-bold text-primary">
    {title}
  </h2>
  <div class="w-20 h-1.5 bg-[#1199ee] mx-auto rounded-full"></div>
</div> 