---
import { Image } from 'astro:assets';
import { translations } from '../i18n/translations';
import dentist1 from '../assets/dentist1.png';
import dentist2 from '../assets/dentist2.png';

const currentLang = Astro.url.pathname.split('/')[1] || 'bs';
const t = translations[currentLang].team;

const images = [dentist1, dentist1, dentist2, dentist1];
---

<section id="team" class="w-full py-20">
  <div class="w-full max-w-7xl mx-auto px-5">
    <!-- Header -->
    <div class="text-center mb-16 space-y-4">
      <span class="text-secondary text-sm font-medium tracking-wider uppercase">
        {t.subtitle}
      </span>
      <h2 class="text-4xl md:text-5xl font-primary font-bold text-primary">
        {t.title}
      </h2>
      <div class="w-20 h-1.5 bg-secondary rounded-full mx-auto"></div>
    </div>

    <!-- Team Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      {t.members.map((member, index) => (
        <div class="group">
          <div class="flex flex-col items-center text-center space-y-4">
            <!-- Image Container -->
            <div class="relative">
              <!-- Decorative elements -->
              <div class="absolute -inset-2 bg-secondary/10 rounded-full -rotate-6 scale-95 transition-transform duration-300 group-hover:rotate-0"></div>
              <div class="absolute -inset-2 bg-primary/5 rounded-full rotate-3 scale-95 transition-transform duration-300 group-hover:rotate-0"></div>
              
              <!-- Profile Image -->
              <div class="relative w-40 h-40 overflow-hidden rounded-full shadow-lg transition-shadow duration-300 group-hover:shadow-xl">
                <Image
                  src={images[index]}
                  alt={member.name}
                  width={160}
                  height={160}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>
              </div>
            </div>

            <!-- Content -->
            <div class="space-y-2">
              <h3 class="text-xl font-primary font-bold text-primary transition-colors duration-300 group-hover:text-secondary">
                {member.name}
              </h3>
              <div class="space-y-1">
                {member.titles.map((title) => (
                  <p class="text-text-secondary/80 text-sm">
                    {title}
                  </p>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 