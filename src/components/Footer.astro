---
import { 
  MapPin, 
  Phone, 
  Mail,
  Facebook,
  Clock
} from 'lucide-astro';
import { translations } from '../i18n/translations';

const currentLang = Astro.url.pathname.split('/')[1] || 'bs';
const t = translations[currentLang].footer;
---

<section data-bg="secondary" class="text-white">
  <div class="w-full max-w-7xl mx-auto px-5 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <!-- Contact Info + Social Links -->
      <div class="space-y-8">
        <!-- Contact Info -->
        <div class="relative group space-y-6">
          <div 
            class="absolute -inset-4 bg-white/5 rounded-2xl opacity-0 transition-opacity duration-300 group-hover:opacity-100 pointer-events-none -z-10"
          ></div>
          
          <div class="relative">
            <h3 class="text-2xl font-primary font-bold text-white">
              {t.contact.title}
            </h3>
            <div class="w-12 h-1 bg-white/20 rounded-full mt-2"></div>
          </div>

          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <Clock class="w-5 h-5 text-white/80" />
              <span>{t.contact.hours}</span>
            </div>
            <div class="flex items-center gap-3">
              <MapPin class="w-5 h-5 text-white/80" />
              <span>{t.contact.address}</span>
            </div>
            <a 
              href="tel:+38737310745" 
              class="flex items-center gap-3 text-white/90 hover:text-white transition-colors w-fit cursor-pointer"
            >
              <Phone size={20} class="flex-shrink-0" />
              <span class="pointer-events-none">+387 37 310 745</span>
            </a>
            <a 
              href="mailto:medicooral.as@gmail.com" 
              class="flex items-center gap-3 text-white/90 hover:text-white transition-colors w-fit cursor-pointer"
            >
              <Mail size={20} class="flex-shrink-0" />
              <span class="pointer-events-none">medicooral.as@gmail.com</span>
            </a>
          </div>
        </div>

        <!-- Social Links -->
        <div class="relative group space-y-4">
          <div 
            class="absolute -inset-4 bg-white/5 rounded-2xl opacity-0 transition-opacity duration-300 group-hover:opacity-100 pointer-events-none -z-10"
          ></div>
          
          <div class="relative">
            <h3 class="text-2xl font-primary font-bold text-white">
              {t.social.title}
            </h3>
            <div class="w-12 h-1 bg-white/20 rounded-full mt-2"></div>
          </div>

          <div class="flex gap-4 relative z-10">
            <a 
              href="https://www.facebook.com/medicooral.as" 
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center rounded-full bg-white/10 hover:bg-white/20 transition-all duration-300 cursor-pointer relative z-10"
              aria-label="Visit our Facebook page"
            >
              <Facebook class="w-5 h-5 text-white pointer-events-none" />
            </a>
          </div>
        </div>
      </div>

      <!-- Map -->
      <div class="group">
        <div class="relative">
          <!-- Decorative elements -->
          <div class="absolute -inset-4 bg-white/5 rounded-2xl -rotate-2 scale-95 opacity-0 transition-all duration-300 group-hover:opacity-100 group-hover:rotate-0"></div>
          <div class="absolute -inset-4 bg-white/5 rounded-2xl rotate-1 scale-95 opacity-0 transition-all duration-300 group-hover:opacity-100 group-hover:rotate-0"></div>
          
          <!-- Map Container -->
          <div class="relative w-full h-[400px] rounded-xl overflow-hidden shadow-lg transition-all duration-300 group-hover:shadow-xl">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d206.41462020910242!2d15.87513692633694!3d44.81043380982792!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47614014d87039e1%3A0xa704582aafda166f!2sMedicoOral%20-%20AS!5e0!3m2!1sen!2sba!4v1736521776712!5m2!1sen!2sba"
              width="100%"
              height="100%"
              style="border:0;"
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="MedicoOral-AS Location"
            ></iframe>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-white/10">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-white/80">
          {t.copyright.replace('{year}', new Date().getFullYear().toString())}
        </p>
        <a 
          href="http://mirzamuric.com" 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-sm text-white/80 hover:text-white transition-colors"
        >
          {t.developer}
        </a>
      </div>
    </div>
  </div>
</section> 