<div id="error-boundary" class="hidden fixed inset-0 bg-white/90 backdrop-blur-sm z-[80] flex items-center justify-center">
  <div class="max-w-md p-8 bg-white rounded-2xl shadow-xl text-center">
    <h2 class="text-2xl font-bold text-red-500 mb-4">Oops! Nešto nije u redu.</h2>
    <p class="text-gray-600 mb-6">Molimo osvježite stranicu ili pokušajte ponovo kasnije.</p>
    <button
      onclick="window.location.reload()"
      class="px-6 py-2 bg-[#1199ee] text-white rounded-full hover:bg-[#1b3b6f] transition-colors"
    >
      Osvježi stranicu
    </button>
  </div>
</div>

<script>
  window.addEventListener('error', () => {
    document.getElementById('error-boundary')?.classList.remove('hidden');
  });
</script> 