---
import { getLang } from '../utils/getLang';

const currentLang = getLang(Astro.url.pathname);
---

<div class="flex items-center gap-2">
  <a 
    href="/" 
    class={`text-sm font-medium px-2 py-1 rounded transition-colors duration-300 ${currentLang === 'bs' ? 'text-white bg-primary' : 'text-text-secondary hover:text-primary'}`}
  >
    BS
  </a>
  <span class="text-text-secondary/30">|</span>
  <a 
    href="/en/" 
    class={`text-sm font-medium px-2 py-1 rounded transition-colors duration-300 ${currentLang === 'en' ? 'text-white bg-primary' : 'text-text-secondary hover:text-primary'}`}
  >
    EN
  </a>
</div> 