---
interface Props {
  title: string;
  description: string;
  icon: any;
}

const { title, description, icon: Icon } = Astro.props;
---

<div class="group relative p-8 rounded-2xl bg-white shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
  <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-[#1199ee]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
  <div class="relative space-y-4">
    <div class="w-14 h-14 rounded-xl bg-[#1199ee]/10 flex items-center justify-center text-[#1199ee] group-hover:scale-110 transition-transform">
      <Icon size={28} />
    </div>
    <h3 class="text-xl font-primary font-bold text-primary">{title}</h3>
    <p class="text-text-secondary leading-relaxed">{description}</p>
  </div>
</div> 